<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>HR Case</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">HRCase</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="Data" asp-action="Index">Data</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Bulk" asp-action="Upload">Bulk Upload</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="HRBP" asp-action="Index">HRBP Account</a></li>
            </ul>
        </div>
    </nav>

    @{
        // Use container-fluid when a view sets ViewData["FullWidth"] = true
        var containerClass = (ViewData["FullWidth"] as bool?) == true ? "container-fluid" : "container";
    }
    <div class="@(containerClass) mt-3">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
